#footer-sections {
  text-align: center;
  
  .sqs-image-shape-container-element {
    overflow: visible !important;
  }
  
  .page-section {
    &.section-height--small {
      min-height: auto !important;
    }
    
    &:not(:first-of-type) {
      .content-wrapper {
        margin-top: 0;
        
        .image-block {
          padding-bottom: 0;

          .sqs-block-image-figure {
            max-width: 100px !important;
            overflow: visible !important;
            
            .image-block-wrapper {
              overflow: visible !important;

              img {
                filter: drop-shadow(2px 2px 2px rgba(0,0,0,0.25));
              }
            }
          }
        }
      }
    }
      
    &:not(:last-of-type) {
      .content-wrapper {
        padding-bottom: 0;
      }
    }
  }
  
  .form-item {
    label {
      display: none;
    }
  }
  
  .form-wrapper {
    .field-list {
      .field {
        margin-bottom: 10px;
        
        .field-element {
          background: @form-field-backgrounds;
          border-color: darken(@comic-purple, 10%) darken(@comic-purple, 20%) darken(@comic-purple, 20%) darken(@comic-purple, 10%);
          border-style: solid;
          border-width: 1px;
          border-radius: 4px;
          color: #000;
          font-size: 14px;
          line-height: normal;
          padding: 14px;
          margin: 6px 0 4px;
          max-width: 320px;
        }
      }
    }
  }
}